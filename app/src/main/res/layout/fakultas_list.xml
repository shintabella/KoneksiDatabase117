<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_idfakultas"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Id Fakultas"
                    android:textSize="24sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/label_kodefakultas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aladin"
                    android:text="Kode Fakultas"
                    android:textColor="#05720A"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/label_namafakultas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aladin"
                    android:text="Nama Fakultas"
                    android:textColor="#056F09"
                    android:textSize="24sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>